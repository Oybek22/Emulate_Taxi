<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_taxi"
        style="@style/Toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tel_number_text"
        style="@style/MyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telephone number"
        app:layout_constraintBottom_toBottomOf="@id/tel_number_value"
        app:layout_constraintEnd_toStartOf="@id/tel_number_value"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/tel_number_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:hint="+79123456789"
        android:inputType="phone"
        android:maxLength="12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tel_number_text"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_taxi" />

    <TextView
        android:id="@+id/name_text"
        style="@style/MyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/name_value"
        app:layout_constraintEnd_toStartOf="@id/name_value"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/name_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/hint_name"
        android:inputType="textCapSentences"
        android:maxLength="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/tel_number_value"
        app:layout_constraintTop_toBottomOf="@id/tel_number_value" />


    <TextView
        android:id="@+id/surname_text"
        style="@style/MyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surname"
        app:layout_constraintBottom_toBottomOf="@+id/surname_value"
        app:layout_constraintEnd_toStartOf="@id/surname_value"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/surname_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/hint_surname"
        android:inputType="textCapSentences"
        android:maxLength="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="@+id/name_value"
        app:layout_constraintTop_toBottomOf="@id/name_value" />

    <Button
        android:id="@+id/button_registration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="REGISTRATION"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/surname_value" />


</androidx.constraintlayout.widget.ConstraintLayout>